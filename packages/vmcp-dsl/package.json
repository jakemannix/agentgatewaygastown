{
  "name": "@vmcp/dsl",
  "version": "0.1.0",
  "description": "TypeScript DSL for defining vMCP tool compositions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vmcp-compile": "./dist/bin/vmcp-compile.js"
  },
  "scripts": {
    "generate": "cd ../.. && npx buf generate --path crates/agentgateway/proto/registry.proto",
    "build": "npm run generate && tsc",
    "build:no-gen": "tsc",
    "clean": "rm -rf dist src/generated",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "vmcp",
    "tool-composition",
    "agent-gateway"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@bufbuild/buf": "^1.28.0",
    "@types/node": "^20.0.0",
    "ts-proto": "^1.165.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}

